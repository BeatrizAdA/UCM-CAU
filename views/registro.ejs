<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/estilo.css" />
    <link rel="icon" href="/img/favicon.png" />
    <title>Registro</title>
    
    <%- include("funcionHabilitarTecnico") %>
</head>
<body>
    <div class="container-fluid">
        <%- include("encabezadoLoginRegistro") %>
        <form method="POST" action="/registro" name="formulario" enctype="multipart/form-data">
            <div class="row registroRow">
                <div class="col">
                    <label>Correo</label>
                    <input type="text" name="email" required>
                </div>
                <div class="col">
                    <label>Nombre para mostrar</label>
                    <input type="text" name="nombre" required>
                </div>
            </div>
            <div class="row registroRow">
                <div class="col">
                    <label>Contraseña</label>
                    <input type="password" name="password" required>
                </div>
                <div class="col">
                    <label>Perfil universitario</label>
                    <br>
                    <select name="option" id="selectPerfilUniversitario" onchange="habilitarTecnico()" required>
                        <option></option>
                        <option value="Alumno" id="opcion">Alumno</option>
                        <option value="PAS" id="opcion">Personal de Administración y Servicios (PAS)</option>
                        <option value="PDI" id="opcion">Personal Docente e Investigador</option>
                        <option value="AntiguoAlumno" id="opcion">Antiguo Alumno</option>
                    </select>
                </div>
            </div>
            <div class="row registroRow">
                <div class="col col-6">
                    <label>Confirmar contraseña</label>
                    <input type="password" name="confirmPassword" required>
                </div>
                <div class="col colTecnico">
                    <label id="labelTecnico" hidden>Técnico</label>
                    <input type="checkbox" class="checkboxTecnico" name="tecnico" id="tecnico" hidden>
                </div>
                <div class="col">
                    <label id="labelNumEmpleado" hidden>Nº Empleado</label>
                    <input type="text" name="numEmpleado" id="numEmpleado" hidden>
                </div>
            </div>
            <div class="row registroRow">
                <label>Imagen de pefil</label>
                <input type="file" name="image" id="image">
            </div>
            <% if(msg !== null) { %>
                <div class="row">
                    <div class="col col-12">
                        <h5 class="error"><%= msg %> </h5>
                    </div>
                </div>
            <% } %>
            <div class="row registroRow">
                <div class="col col-3">
                    <button class="btn btn-outline-warning"><a href="/login">Login</a></button>
                </div>
                <div class="col col-6 offset-3">
                    <button class="btn btn-warning" type="submit">Crear nueva cuenta</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>